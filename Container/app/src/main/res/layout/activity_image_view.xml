<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageViewActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/imageViewFromGalleryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ImageView From Gallery"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageviewButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Image View"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFromGalleryButton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonImageViewTakeCameraWithFile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="ImageView Take Camera With File"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageviewButton"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>