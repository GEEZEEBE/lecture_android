<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ohsanghun.awe_gesture.MainActivity"
    android:padding="20dp"
    android:orientation="vertical">

    <Button
        android:text="@string/ontouch_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OnTouchEventButton"
        android:onClick="onClick" />

    <Button
        android:text="@string/gesturedetector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gesturedetector"
        android:onClick="onClick" />

    <!--Button
        android:text="@string/gestureoverlayview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button03"
        android:onClick="onClick" /-->

    <Button
        android:text="@string/scalegesturedetector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scaleGestureDetectorButton"
        android:onClick="onClick"
        android:textAllCaps="false" />

    <Button
        android:text="@string/drag_and_drop_gesture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dragAndDropGestureButton"
        android:onClick="onClick"
        android:textAllCaps="false" />

</LinearLayout>
