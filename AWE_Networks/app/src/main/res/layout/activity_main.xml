<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ohsanghun.awe_networks.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="24sp"
        android:textAlignment="center" />

    <Button
        android:text="Get BT List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickNetwork"
        android:id="@+id/getBTListButton" />

    <Button
        android:text="Connect BT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickNetwork"
        android:id="@+id/connectBTButton" />

    <Button
        android:text="@string/bluetooth_communicate_with_arduino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickNetwork"
        android:id="@+id/bluetoothCommunicateWithArduino" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rest API Missing"
        android:id="@+id/restApiMissingButton"
        android:onClick="onClickNetwork"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rest API"
        android:id="@+id/restApiButton"
        android:onClick="onClickNetwork"
        android:textAllCaps="false" />

</LinearLayout>
