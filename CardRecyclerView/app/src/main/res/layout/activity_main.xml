<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/recyclerview"
        android:layout_width="174dp"
        android:layout_height="0dp"
        android:layout_marginEnd="99dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="@string/recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gridrecyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="onClick"
        android:text="@string/gridrecyclerview"
        app:layout_constraintEnd_toEndOf="@+id/staggeredgridLayout"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="@+id/staggeredgridLayout"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview" />

    <Button
        android:id="@+id/scrolling"
        android:layout_width="177dp"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:text="@string/scrolling"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staggeredgridLayout" />

    <Button
        android:id="@+id/staggeredgridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Staggered Grid Layout"
        app:layout_constraintEnd_toEndOf="@+id/scrolling"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/scrolling"
        app:layout_constraintTop_toBottomOf="@+id/gridrecyclerview" />

    <Button
        android:id="@+id/recyclerviewfromdetailactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="220dp"
        android:layout_marginLeft="16dp"
        android:onClick="onClick"
        android:text="@string/recyclerviewfromdetailactivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrolling" />

</android.support.constraint.ConstraintLayout>
