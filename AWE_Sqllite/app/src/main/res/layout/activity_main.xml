<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ohsanghun.androidappwithoutevening.MainActivity">

    <Button
        android:id="@+id/buttonSimpleDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:text="Simple Database"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonSimpleCursorAdapterWithDB"
        app:layout_constraintStart_toStartOf="@+id/buttonSimpleCursorAdapterWithDB" />

    <Button
        android:id="@+id/buttonSimpleCursorAdapterWithDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="64dp"
        android:text="SimpleCursorAdapter With Database"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
