<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ohsanghun.awe_thread.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_activity"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:text="@string/error_thread_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/errorThreadActivity"
        android:textSize="14sp"
        android:onClick="onClick" />

    <Button
        android:text="@string/handler_thread_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/handlerThreadActivity"
        android:textSize="14sp"
        android:onClick="onClick" />

    <Button
        android:text="@string/handler_thread_with_message_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/handlerThreadWithMessageActivity"
        android:textSize="14sp"
        android:onClick="onClick" />

    <Button
        android:text="@string/watch_timer_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/watchTimerActivity"
        android:textSize="14sp"
        android:onClick="onClick" />

    <Button
        android:text="@string/stop_watch_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stopWatchActivity"
        android:textSize="14sp"
        android:onClick="onClick" />
</LinearLayout>
